<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulTwiter"
    tools:context=".ui.activities.fragment.FirstFragment">

    <!-- TODO: Update blank fragment layout -->



    <androidx.cardview.widget.CardView
        android:id="@+id/carryView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:elevation="10dp"
        android:layout_margin="35dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <!--
        -->

    </androidx.cardview.widget.CardView>


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_margin="25dp"
                android:layout_marginTop="308dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/carryView"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:background="@drawable/degradado"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/carryView"
                android:orientation="horizontal">

<EditText
    android:id="@+id/txtFilter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:textSize="14sp"
    android:maxLines="1"
    android:singleLine="true"
    android:imeOptions="actionDone"
    />


                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:id="@+id/reSwipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMarvelChart"
                    android:layout_width="match_parent"
                    android:layout_height="406dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
            </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



